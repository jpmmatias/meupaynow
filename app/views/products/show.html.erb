<ul>
    <% @product_versions.each do |product| %>
    <% if product.try(:reify) %>
    <li>
        <h1><%= product.reify.name %></h1>
        <p><%= number_to_currency product.reify.value %></p>
        <p><%=  product.reify.discount_pix.to_s.last == '0' ?  number_to_percentage( product.reify.discount_pix, precision: 0) : number_to_percentage( product.reify.discount_pix, precision: 1) %></p>
