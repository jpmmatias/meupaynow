<div class="pt-3 pb-5">

    <div class="container">
        <div class="row mx-auto d-flex justify-content-center">
            <div class="col-7">
                <div class="card p-5 shadow">

                    <h5 class="mb-5 display-5">Log In</h5>

                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                    <div class="mb-3">
                        <%= f.label :email %>
                        <%= f.text_field :email, class: 'form-control' %>
                    </div>

                    <div class="mb-3">
                        <%= f.label :password %>
                        <%= f.password_field :password, class: 'form-control' %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                    <div class="mb-3">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                    <% end %>

                    <div class="mb-3">
                        <div class="row ml-1">
                            <%= f.submit "Entrar",  class: 'btn btn-primary btn-md' %>
                        </div>
                    </div>

                    <% end %>
                </div>
            </div>
        </div>

        <div class="row mt-5  mx-auto  d-flex justify-content-center">
            <div class="col-6">
                <div class="card p-5 shadow">
                    <small><%= render "devise/shared/links" %></small>
                </div>
            </div>
        </div>
    </div>
</div>