<% if @client.active %>
<%= link_to "Desativar Cliente", request_change_status_client_path , class: 'btn btn-outline-danger'%>
<% else %>
<%= link_to "Ativar Cliente", request_change_status_client_path , class: 'btn btn-outline-primary'%>
<% end %>
<div class="card mx-auto p-2" style="width: 50rem;">
    <div class="card-body">
        <h4 class="card-title display-4 mb-4"><%= @client.full_name %></h4>
        <h6 class="card-text mb-3">Nome: <%= @client.name %></h6>
        <h6 class="card-text mb-3">Sobrenome: <%= @client.surname %></h6>
        <h6 class="card-text mb-3">Email: <%= @client.email %></h6>
        <h6 class="card-text mb-5">Role: <%= @client.role %></h6>

    </div>
</div>